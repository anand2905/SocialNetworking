<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>


    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %></br>
      <%= f.text_field :name, class: 'form-control' %> </br></br></br>

      <%= f.label :email %></br>
      <%= f.email_field :email, class: 'form-control' %></br></br></br>

      <%= f.label :password %></br>
      <%= f.password_field :password, class: 'form-control' %></br></br></br>

      <%= f.label :password_confirmation, "Confirmation" %></br>
      <%= f.password_field :password_confirmation, class: 'form-control' %></br></br></br>

      <%= f.label :image %></br>
      <%= f.file_field :image, class: 'form-control' %></br></br></br>



      <%= f.submit "Create my account", class: "btn btn-primary" %></br></br></br>
    <% end %>
  </div>
</div>
